<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AttendanceLogin.NonAdminPage"
             Title="User Page"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label Text="Welcome!"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center" />

        <Label x:Name="WelcomeLabel"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="DarkGray" />

        <Label Text="This is the non-admin user dashboard."
               FontSize="16"
               TextColor="Gray"
               HorizontalOptions="Center" />

        <Button Text="Open Time-In Dashboard"
                BackgroundColor="Green"
                TextColor="White"
                Clicked="OnOpenDashboardClicked"
                Padding="10"
                CornerRadius="10"
                HorizontalOptions="Center" />

        <Button Text="Logout"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="OnLogoutClicked"
                Padding="10"
                CornerRadius="10"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
